                <a href='http://www.baidu.com' >
                  <i class='ion-social-facebook' ></i>
                </a>
              </li>
              <li>
                <a href='http://www.bistu.edu.cn/' >
                  <i class='ion-social-twitter' ></i>
                </a>
              </li>
            </ul>

          </div>
        </div>
      </div>
    </footer>

    <!--======================================================
      JavaScript Files
    ======================================================-->
    <script src='http://cimply.co/js/jquery.min.js' ></script>
    <script type="text/javascript">
    $(document).ready(function(){
      var buttonCcap = document.getElementById('ccap');
      console.log(buttonCcap);
      var change = 0;
      buttonCcap.addEventListener('click', function(){
        console.log("aaa");
        change++;
        var url = 'http://localhost:3001/verificationCode?time='+change;
        buttonCcap.setAttribute('src', url);
      }, false);

      var buttonSignin = document.getElementById('signin');
      buttonSignin.addEventListener('click', function() {
        console.log("aaa");
        $.ajax({
          type: 'POST',
          url: '/signin',
          data: {
            name: document.getElementById('name').value,
            password: document.getElementById('password').value,
            verCode: document.getElementById('ccapcode').value
          },
          dataType: "json",
          success: function(data) {
            console.log(data);
            // window.location = '/signin'
            
          }
        });
      }, false);
    })
    </script>
    
